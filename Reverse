#include<stdio.h>

#include<conio.h>

void main()

{

int n,num,rev=0;

 printf ("Enterany number to check reverse:");

scanf("%d",&n);

num=n;

while(n!=0)

{

rev=(rev*10)+(n%10);

n/=10;

}

if(rev==num)

{

printf("%d is reverse of the number.",num);

}

else

{

printf("%d is not reverse.",num);

}

getch();

}
